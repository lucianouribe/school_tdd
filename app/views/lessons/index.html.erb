<h1><%= @kindergarten.name %></h1>
<h3>Lessons</h3>

<table>
  <thead>
    <tr>
      <th>Subject</th>
      <th>Teacher</th>
      <th>Official Bully</th>
      <th>Official Bullied</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @kindergarten.lessons.each do |lesson| %>
    <tr>
      <td><%= lesson.subject %></td>
      <td><%= lesson.teacher %></td>
      <td><%= lesson.bully %></td>
      <td><%= lesson.bullied %></td>
      <td><%= link_to 'Show', kindergarten_lesson_path(@kindergarten, lesson), class: 'btn' %></td>
      <td><%= link_to 'Edit', edit_kindergarten_lesson_path(@kindergarten, lesson), class: 'btn' %></td>
      <td><%= link_to 'Delete', lesson, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn' %></td>
    </tr>
    <% end %>
  </tbody>
</table>


<hr/>
<div class="center">
  <%= link_to 'New Lesson', new_kindergarten_lesson_path, class: 'btn' %>
</div>
