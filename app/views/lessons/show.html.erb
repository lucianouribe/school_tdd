<h1><%= @kindergarten.name %></h1>

<div class="row">
  <div class="col s12 m12">
    <div class="card z-depth-0">
      <div class="card-content">
        <span class="card-title"><%= @lesson.subject %></span>
        <p>Teacher: <%= @lesson.teacher %></p>
        <p>Official Bully: <%= @lesson.bully %></p>
        <p>Official Bullied: <%= @lesson.bullied %></p>
      </div>
      <div class="card-action">
        <%= link_to 'Home', root_path, class: 'btn card-btn' %>
        <%= link_to 'Students', lesson_sutdents_path(@lesson), class: 'btn card-btn' %>
      </div>
    </div>
  </div>
</div>
